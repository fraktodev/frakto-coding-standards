<?xml version="1.0"?>
<ruleset name="Frakto-Sniff"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="https://schema.phpcodesniffer.com/phpcs.xsd">

	<description>Frakto PHP Sniff Coding Standards</description>

	<!-- #### Frakto standards #### -->
	<rule ref="Frakto-PHP">
		<!-- Allow free file naming -->
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />

		<!-- Allow free usage of variables -->
		<exclude name="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase" />
		<exclude name="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase" />

		<!-- Allow free usage of functions -->
		<exclude name="Squiz.Commenting.FunctionComment.TypeHintMissing" />
		<exclude name="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing" />

		<!-- Exclude Frakto DB rules -->
		<exclude name="Frakto.DB" />
	</rule>
</ruleset>
	